@model ShoppingV2.Web.Models.AddCart.AddCartViewModel
@{
    ViewBag.Title = "Add Items";
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<html>
<body id="additem">

        <h1 style="text-align:center">Add Items</h1>
        <br />
        <div class="text-center">
            <br />
            <div class="text-center">

                <h4 style="display:inline-block;float:inherit">Date - </h4>
                <h4 id="pdate" style="display:inline-block;float:inherit"></h4>

                @*<input type='button' class="btn btn-success" style="align-content:center" onClick='javascript:showTable();' value='Show Table'>*@

                <br />
            </div>
            <br />
        </div>

        <br />
        <div class="text-center" id="producttablediv">
            <br />
            <table class="table" id="table" title="producttable">
                <tr>
                    <th>Customer Name</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Sub Total</th>
                </tr>
                <tr>
                    <td align="center">
                        <select class="dropdown" style="width:150px;height:40px" id="customerpick" name="CustomerId" onchange="LoadCustomers(this.value)" required>
                            <option>Select Customer</option>
                            @foreach (var customer in Model.SelectedCustomerName)
                            {
                                <option class="dropdown-item" value="@customer.Id" id="optcust">
                                    @customer.CustomerName
                                </option>

                            }
                        </select>
                    </td>
                    <td>
                        @*<label asp-for="ProductListModel" class="col-md-3 col-form-label"></label>*@
                        <div>
                            <select class="dropdown" style="width:150px;height:40px" id="productpick" name="ProductId" @*onchange="LoadProducts(this.value)"*@ required>
                                <option>Select Product</option>
                                @foreach (var product in Model.SelectedProductName)
                                {
                                    <option class="dropdown-item" value="@product.Id" id="prodoption">
                                        @product.ProductName
                                    </option>

                                }
                            </select>
                        </div>
                    </td>
                    <td>
                        <p name="ProductDescription" id="desc"></p>

                    </td>
                    <td>
                        <p name="UnitPrice" id="price"></p>

                    </td>
                    <td align="center">
                        <input type="number" name="quantity" id="quantity" style="padding:0;vertical-align:middle;width:75px;text-align:center" class="form-control" />
                    </td>
                    <td>
                        <p name="subtotal" id="subtotal"></p>
                    </td>
                    @*<td style="display:inline-table">
                        </td>*@
                </tr>
            </table>

            <div class="text-center">
                <br />
                <input type="button" id="addcurrentorder" class="btn btn-success" style="position:relative;color:white" value="Add Order" onclick="AddItems();" />


                <br />

            </div>
            <br />
            <table class="table" id="tableproduct" title="tableproduct" @*style="visibility:hidden"*@>
                <tr>
                    <th>Customer Name</th>
                    <th>Date</th>
                    <th>Product Name</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Product Price</th>
                    <th>Action</th>
                </tr>
                <tbody>
                    <tr>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-success" id="saveorder" onclick="confirmOrder();">Save Order</button>
        </div>

    <script src="~/js/addCartItem.js"></script>
</body>
</html>

